{{#if theUser}}


<div class="container p-0 mx-auto">
<div class="row p-0">
        <div class="col-4">
          <h6>Welcome Back,{{theUser.username}}</h6>
        </div>
       
      <div class="text-center col-4">
        <a href="/logout">
          logout
        </a>
        </div>
        <div class="text-center col-4">
        <a href="/create-new-deck">
          Create Deck
        </a>
        </div>
      
  </div>
  </div>
  <div class="container p-0 mx-auto">
   
      <h3>Flashcard Decks:</h3>
        {{#if showDecks}}
        <div class="container">
          {{#each showDecks}}
           <div class="row">
          <div class="col-4">
           Deck Name
          </div>
          <div class="col-6">
           Date Created
          </div>
          <div class="col-2">
           Edit/Delete
          </div>

        </div>

       <div class="row">
          <div class="col-4">
           <a href="/deck/{{this._id}}">{{this.name}}</a>
          </div>
          <div class="col-6">
           {{this.created_at}}
          </div>
          <div class="col-2">
            <a data-id = "{{this._id}}" href="/edit-deck/{{this._id}}">Edit</a>
          </div>

        </div>
        {{/each}}
        </div>
        {{else}}
            <form id="createDeckForm" method="POST" action="/" >
            
            <input id="quizname" type="text" name="quizName">
            <div id="wordList">

            </div>

            </form>
            <button class="create" id="newWord">New Word</button>
            <button class="create" id="submitWords" type='submit'>ADD WORDS</button>

      {{/if}}
  
</div>
{{else}}
<form action="/login" method="POST">
  <h2 class="text-center">Login</h2>

  <label for="username">Username</label>
  <input type="text" name="username">

  <label for="password">Password</label>
  <input type="password" name="password">

   {{#if errorMessage}}
    <div>{{errorMessage}}</div>
    {{/if}}
  <div class="mx-auto text-center mt-2">
    <button class="btn btn-primary mx-auto text-center">Sign in</button>
  </div>

  <p class="account-message">
    Don't have an account? <a href="/signup">Sign up</a>
  </p>
</form>
{{/if}}


