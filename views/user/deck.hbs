<h3 class="text-center">{{data.name}}</h3>

{{#each data}}
<div>
  <div class="flip-card">
    <div class="flip-card-inner">
      <div class="flip-card-front">
        <h3 class="hand">{{this.word}}</h3>
      </div>

      <div class="flip-card-back">

        <div class="side-b flash ">
          <p class="d-block">
            {{this.def}}
          </p>
        </div>
      </div>

    </div>
  </div>

  {{/each}}


  <ol>
    {{#each def}}
    <li>{{this}}</li>
    {{/each}}
  </ol>